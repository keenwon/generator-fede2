{
  "name": "<%= name %>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "scripts": {
    "start": "NODE_ENV=development nodemon --ignore build/ --ignore dev/ bin/app.js",
    "test": "npm run test:eslint && npm run test:stylelint && npm run test:puglint",
    "test:eslint": "eslint dev/js/**/*.js !dev/js/libs/**",
    "test:stylelint": "stylelint dev/css/**/*.pcss !dev/css/libs/normalize.pcss",
    "test:puglint": "pug-lint dev/pugs/**/*.pug",
    "clean:dist": "del -f dist",
    "clean:icon": "del -f dist/images/**/icon",
    "copy": "npm run copy:images && npm run copy:jslibs && npm run copy:postcss",
    "copy:images": "copyfiles -u 1 'dev/images/**/*' dist",
    "copy:jslibs": "copyfiles -u 4 'dev/js/libs/es5-shim/es5-shim.min.js' dist/js/libs",
    "copy:postcss": "copyfiles -u 1 'dev/css/**/*' dist",
    "css": "npm run css:build && npm run css:clean && npm run css:rename && npm run css:sprites && npm run css:process",
    "css:build": "postcss -r -c postcss.json",
    "css:clean": "del -f dist/css/libs dist/css/**/modules.pcss",
    "css:rename": "renamer --find 'pcss' --replace 'css' dist/css/**/*.pcss",
    "css:sprites": "node build/css-sprites",
    "css:process": "node build/css-process",
    "imagemin": "node build/imagemin",
    "js": "node build/js",
    "__build__": "npm run clean:dist && npm run copy && npm run css && npm run clean:icon && npm run imagemin && npm run js",
    "build:testing": "npm test && NODE_ENV=testing npm run __build__",
    "build:production": "npm test && NODE_ENV=production npm run __build__"
  },
  "dependencies": {
    "async": "^2.0.1",
    "clean-css": "^3.4.19",
    "co-body": "^4.2.0",
    "colors": "^1.1.2",
    "copyfiles": "^1.0.0",
    "css-loader": "^0.24.0",
    "del-cli": "^0.2.0",
    "eslint": "^3.4.0",
    "glob": "^7.0.6",
    "imagemin": "^5.2.2",
    "imagemin-jpeg-recompress": "^5.1.0",
    "imagemin-pngquant": "^5.0.0",
    "klaw": "^1.3.0",
    "koa": "^1.2.1",
    "koa-pug": "^3.0.0-0",
    "koa-router": "^5.4.0",
    "koa-static": "^2.0.0",
    "koa-subdomain": "^1.0.6",
    "koa-webpack-dev-middleware": "^1.2.1",
    "nodemon": "^1.10.0",
    "optimist": "^0.6.1",
    "postcss": "^5.1.2",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-each": "^0.9.3",
    "postcss-short": "^1.4.0",
    "precss": "^1.4.0",
    "pug-lint": "^2.3.0",
    "pug-loader": "^2.2.1",
    "renamer": "^0.5.7",
    "spritesmith": "^3.1.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "webpack": "^1.13.1"
  }
}